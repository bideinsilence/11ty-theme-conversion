{% extends "_layouts/simple.njk" %}

{% block postcontent %}

<div class="spt">
  <div class="testimonial-area spb">
    <div class="container">
        <div class="testimonial-slider bordered">
            {% for testimonial in collections.testimonials %}
                <div class="single-slide">
                    <div class="inner">
                        <p>{{ testimonial.data.review }}</p>
                        <div class="client-info">
                            <div class="client-img">
                                <img src="/assets/img/client.jpg" alt="client">
                            </div>
                            <div class="client-data">
                                <h4>{{ testimonial.data.name }}</h4>
                                <span>{{ testimonial.data.occupation }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>

{% endblock postcontent%}
